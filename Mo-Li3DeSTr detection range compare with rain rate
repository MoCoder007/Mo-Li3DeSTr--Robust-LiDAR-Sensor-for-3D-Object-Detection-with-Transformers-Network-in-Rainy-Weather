# Given data (example data)
rain_rate = np.array([0, 5, 10, 15, 20, 25, 30, 35, 40, 45, 50])  # Rain rate in mm/h
detection_range = np.array([22, 21.5, 20, 18, 16.5, 15, 14, 13, 12, 11, 10])  # Detection range in meters

# Define thresholds for light and heavy rain
light_rain_threshold = 10  # mm/h
heavy_rain_threshold = 30  # mm/h

# Create the plot
plt.figure(figsize=(8, 6))

# Plot the detection range
plt.plot(rain_rate, detection_range, marker='o', linestyle='-', color='blue', label='Detection Range')

# Highlight light rain area
plt.fill_between(rain_rate, detection_range, where=(rain_rate <= light_rain_threshold), 
                 color='green', alpha=0.3, label='Light Rain')

# Highlight heavy rain area
plt.fill_between(rain_rate, detection_range, where=(rain_rate >= heavy_rain_threshold), 
                 color='red', alpha=0.3, label='Heavy Rain')

# Set the title and labels
plt.title('Mo-Li3DeSTr 3D Detection Range Compare with Rain Rate')
plt.xlabel('Rain Rate (mm/h)')
plt.ylabel('3D Detection Range (m)')

# Add legend
plt.legend()

# Display the grid
plt.grid(True)

# Show the plot
plt.show()
